{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        ".eslintrc.js",
        "jest.config.js",
        "lint-staged.config.js"
    ],
    "ts-node": {
        "files": true,
        "require": [
            "tsconfig-paths/register",
            "dotenv/config"
        ],
        "transpileOnly": true
    }
}
